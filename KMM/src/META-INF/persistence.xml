    <class>kmm.agents.Gender</class>
    <class>kmm.agents.IndependentContractor</class>
    <class>kmm.agents.KMMUser</class>
    <class>kmm.agents.Kinship</class>
    <class>kmm.agents.Log</class>
    <class>kmm.agents.LogAction</class>
    <class>kmm.agents.PeriodicalExam</class>
    <class>kmm.agents.Person</class>
    <class>kmm.agents.PersonWithSkills</class>
    <class>kmm.agents.Privilege</class>
