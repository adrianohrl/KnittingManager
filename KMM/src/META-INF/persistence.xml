    <class>kmm.documents.TituloDeEleitor</class>
    <class>kmm.documents.VacationNote</class>
    <class>kmm.paycheck.DailyEstablishedHour</class>
    <class>kmm.paycheck.DayType</class>
    <class>kmm.paycheck.Extra</class>
    <class>kmm.paycheck.ExtraTotal</class>
    <class>kmm.paycheck.Salary</class>
    <class>kmm.paycheck.Schedule</class>
    <class>kmm.paycheck.TimeClockEvent</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/login?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="login"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="user_login"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
